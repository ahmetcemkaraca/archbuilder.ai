# ArchBuilder.AI Environment Variables
# Copy this file to .env and fill in your values

# Application
ENVIRONMENT=development
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here
API_KEY=your-api-key-here

# Database
DATABASE_URL=postgresql://archbuilder:password@localhost:5432/archbuilder
POSTGRES_DB=archbuilder
POSTGRES_USER=archbuilder
POSTGRES_PASSWORD=password

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password

# AI Services
OPENAI_API_KEY=your-openai-api-key
VERTEX_AI_PROJECT_ID=your-vertex-ai-project-id
VERTEX_AI_LOCATION=us-central1

# RAGFlow
RAGFLOW_API_URL=http://localhost:8001
RAGFLOW_API_KEY=your-ragflow-api-key

# Monitoring
GRAFANA_PASSWORD=admin
SENTRY_DSN=your-sentry-dsn

# SSL/TLS
SSL_CERT_PATH=./configs/ssl/cert.pem
SSL_KEY_PATH=./configs/ssl/key.pem

# External Services
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=archbuilder-storage
AWS_REGION=us-east-1

# Security
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# WebSocket
WS_HEARTBEAT_INTERVAL=30
WS_CONNECTION_TIMEOUT=300

# AI Model Configuration
DEFAULT_AI_MODEL=gpt-4
AI_TEMPERATURE=0.1
AI_MAX_TOKENS=4000
AI_CONFIDENCE_THRESHOLD=0.8

# Performance
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30
CACHE_TTL_SECONDS=3600

# Logging
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30
