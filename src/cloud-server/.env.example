# ArchBuilder.AI Cloud Server Environment Variables
# Production'da bu değerleri güvenli şekilde ayarlayın

# Core Settings
APP_NAME="ArchBuilder Cloud Server"
LOG_LEVEL=INFO
AUTH_DEV_MODE=false
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production

# OpenAI Integration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORGANIZATION=org-your-organization-id
# Azure OpenAI (Optional - OpenAI alternatifi)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Google Vertex AI Integration  
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
VERTEX_AI_ENDPOINT=

# RAGFlow Integration
RAGFLOW_BASE_URL=http://localhost:9380
RAGFLOW_API_KEY=ragflow-your-api-key
RAGFLOW_API_VERSION=v1
RAGFLOW_TIMEOUT_SECONDS=30

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/archbuilder_ai
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# Security
CORS_ORIGINS=["http://localhost:3000", "https://your-domain.com"]
ALLOWED_HOSTS=["localhost", "your-domain.com"]
TRUST_PROXY_HEADERS=false

# Rate Limiting
RATE_LIMIT_ENABLED=true  
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8001
OPENTELEMETRY_ENABLED=false

# File Storage
UPLOAD_MAX_SIZE_MB=100
SUPPORTED_FILE_FORMATS=dwg,dxf,ifc,rvt,pdf
STORAGE_BACKEND=local
# For cloud storage
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=  
AWS_SECRET_ACCESS_KEY=
GCS_BUCKET=

# Business Logic
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,tr,de,fr,es
DEFAULT_REGION=eu
SUPPORTED_REGIONS=eu,us,tr,asia

# AI Processing Limits
MAX_CONCURRENT_AI_REQUESTS=10
AI_TIMEOUT_SECONDS=120
AI_RETRY_ATTEMPTS=3
AI_FALLBACK_ENABLED=true

# Billing & Usage Tracking
BILLING_ENABLED=false
STRIPE_API_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
USAGE_TRACKING_ENABLED=true

# Development/Debug
DEBUG=false
RELOAD=false
WORKERS=1
ACCESS_LOG=true