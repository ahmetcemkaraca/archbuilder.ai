<Window x:Class="ArchBuilder.Desktop.Views.AICommandWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI Command" Height="420" Width="720">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBox Width="240" Margin="0,0,8,0" PlaceholderText="command" Text="{Binding Command, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Send" Click="OnSend"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <TextBlock Text="Input JSON"/>
                <TextBox AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Text="{Binding InputJson, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <TextBlock Text="Result"/>
                <TextBox AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Text="{Binding Result}"/>
            </StackPanel>
        </Grid>

        <ProgressBar Grid.Row="2" Height="8" IsIndeterminate="{Binding Busy}"/>
    </Grid>
</Window>


