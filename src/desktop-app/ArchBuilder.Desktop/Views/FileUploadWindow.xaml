<Window x:Class="ArchBuilder.Desktop.Views.FileUploadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Upload Document" Height="220" Width="520">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBox Width="360" Text="{Binding FilePath, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Browse" Margin="8,0,0,0" Click="OnBrowse"/>
        </StackPanel>

        <ProgressBar Grid.Row="1" Height="10" Minimum="0" Maximum="100" Value="{Binding Progress}"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Upload" Click="OnUpload"/>
            <Button Content="Close" Margin="8,0,0,0" Click="OnClose"/>
        </StackPanel>
    </Grid>
</Window>


