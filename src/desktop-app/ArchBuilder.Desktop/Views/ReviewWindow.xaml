<Window x:Class="ArchBuilder.Desktop.Views.ReviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>
        
        <Style x:Key="SectionStyle" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        
        <Style x:Key="ValidationErrorStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#DC3545"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
        </Style>
        
        <Style x:Key="ValidationWarningStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFC107"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
        </Style>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
        
        <Style x:Key="ApproveButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style x:Key="RejectButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#DC3545"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style x:Key="RevisionButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#FFC107"/>
            <Setter Property="Foreground" Value="#212529"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header Section -->
        <Border Grid.Row="0" Style="{StaticResource SectionStyle}">
            <StackPanel>
                <TextBlock Style="{StaticResource HeaderStyle}" Text="{Binding ReviewItemTitle}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{Binding StatusLabel}" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding ReviewItemStatus}" Foreground="{Binding StatusColor}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Margin="20,0,0,0">
                        <TextBlock Text="{Binding PriorityLabel}" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding ReviewItemPriority}" Foreground="{Binding PriorityColor}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="{Binding CreatedDateLabel}" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding ReviewItemCreatedDate}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- Content Section -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Validation Results Section -->
                <Border Style="{StaticResource SectionStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource HeaderStyle}" Text="{Binding ValidationResultsLabel}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Schema Validation -->
                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="{Binding SchemaValidationLabel}" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding SchemaValidationStatus}" 
                                          Foreground="{Binding SchemaValidationColor}"/>
                                <ItemsControl ItemsSource="{Binding SchemaValidationErrors}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource ValidationErrorStyle}" 
                                                      Text="{Binding}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                            
                            <!-- Geometric Validation -->
                            <StackPanel Grid.Column="1" Margin="8,0">
                                <TextBlock Text="{Binding GeometricValidationLabel}" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding GeometricValidationStatus}" 
                                          Foreground="{Binding GeometricValidationColor}"/>
                                <ItemsControl ItemsSource="{Binding GeometricValidationErrors}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource ValidationErrorStyle}" 
                                                      Text="{Binding}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <ItemsControl ItemsSource="{Binding GeometricValidationWarnings}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource ValidationWarningStyle}" 
                                                      Text="{Binding}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                            
                            <!-- Code Validation -->
                            <StackPanel Grid.Column="2" Margin="8,0,0,0">
                                <TextBlock Text="{Binding CodeValidationLabel}" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding CodeValidationStatus}" 
                                          Foreground="{Binding CodeValidationColor}"/>
                                <TextBlock Text="{Binding CodeComplianceScore}" FontSize="11"/>
                                <ItemsControl ItemsSource="{Binding CodeValidationErrors}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource ValidationErrorStyle}" 
                                                      Text="{Binding}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <ItemsControl ItemsSource="{Binding CodeValidationWarnings}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource ValidationWarningStyle}" 
                                                      Text="{Binding}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Project Analysis Section -->
                <Border Style="{StaticResource SectionStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource HeaderStyle}" Text="{Binding ProjectAnalysisLabel}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Geometry Analysis -->
                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="{Binding GeometryAnalysisLabel}" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding GeometryAnalysisSummary}" FontSize="12"/>
                                <TextBlock Text="{Binding GeometryConfidenceScore}" FontSize="11" Margin="0,4,0,0"/>
                            </StackPanel>
                            
                            <!-- Code Analysis -->
                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                <TextBlock Text="{Binding CodeAnalysisLabel}" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding CodeAnalysisSummary}" FontSize="12"/>
                                <TextBlock Text="{Binding CodeConfidenceScore}" FontSize="11" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Recommendations -->
                        <TextBlock Text="{Binding RecommendationsLabel}" FontWeight="SemiBold" Margin="0,12,0,4"/>
                        <ItemsControl ItemsSource="{Binding Recommendations}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="12" Margin="0,2,0,2" 
                                              TextWrapping="Wrap"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
                
                <!-- Review History Section -->
                <Border Style="{StaticResource SectionStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource HeaderStyle}" Text="{Binding ReviewHistoryLabel}"/>
                        <ItemsControl ItemsSource="{Binding ReviewHistory}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" BorderBrush="#DEE2E6" BorderThickness="1" 
                                           CornerRadius="2" Padding="8" Margin="0,0,0,4">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Action}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Comment}" FontSize="11" 
                                                          TextWrapping="Wrap" Margin="0,2,0,0"/>
                                                <TextBlock Text="{Binding Timestamp}" FontSize="10" 
                                                          Foreground="Gray" Margin="0,2,0,0"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Reviewer}" FontSize="11"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Comments Section -->
        <Border Grid.Row="2" Style="{StaticResource SectionStyle}">
            <StackPanel>
                <TextBlock Text="{Binding CommentsLabel}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <TextBox Text="{Binding ReviewComments, UpdateSourceTrigger=PropertyChanged}" 
                        Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                        VerticalScrollBarVisibility="Auto"/>
            </StackPanel>
        </Border>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="{Binding ApproveButtonLabel}" Style="{StaticResource ApproveButtonStyle}"
                   Command="{Binding ApproveCommand}" IsEnabled="{Binding CanApprove}"/>
            <Button Content="{Binding RejectButtonLabel}" Style="{StaticResource RejectButtonStyle}"
                   Command="{Binding RejectCommand}" IsEnabled="{Binding CanReject}"/>
            <Button Content="{Binding RequestRevisionButtonLabel}" Style="{StaticResource RevisionButtonStyle}"
                   Command="{Binding RequestRevisionCommand}" IsEnabled="{Binding CanRequestRevision}"/>
            <Button Content="{Binding CloseButtonLabel}" Style="{StaticResource ActionButtonStyle}"
                   Command="{Binding CloseCommand}" Margin="12,0,0,0"/>
        </StackPanel>
        
    </Grid>
</Window>
