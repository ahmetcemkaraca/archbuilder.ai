{
  "LocalData": {
    "DataPath": "%LOCALAPPDATA%\\ArchBuilder.AI\\RevitData",
    "BackupPath": "%LOCALAPPDATA%\\ArchBuilder.AI\\Backups",
    "AutoCleanupDays": 30,
    "MaxBackupFiles": 50
  },
  
  "UserPermissions": {
    "CloudSyncExpiryDays": 30,
    "ShowPermissionDialog": true,
    "RememberChoice": true
  },
  
  "CloudStorage": {
    "DefaultProvider": "GoogleCloud",
    "MaxConcurrentUploads": 3,
    "ChunkSizeKB": 1024,
    "RetryCount": 3,
    "TimeoutSeconds": 300
  },
  
  "GoogleCloud": {
    "ProjectId": "",
    "BucketName": "archbuilder-revit-data",
    "CredentialsPath": "",
    "Region": "us-central1"
  },
  
  "OracleCloud": {
    "ConfigFilePath": "",
    "Profile": "DEFAULT",
    "NamespaceName": "",
    "BucketName": "archbuilder-revit-data",
    "CompartmentId": "",
    "Region": "us-ashburn-1"
  },
  
  "AzureStorage": {
    "ConnectionString": "",
    "ContainerName": "archbuilder-revit-data",
    "AccountName": "",
    "AccountKey": ""
  },
  
  "AmazonS3": {
    "AccessKey": "",
    "SecretKey": "",
    "BucketName": "archbuilder-revit-data",
    "Region": "us-east-1"
  },
  
  "Compression": {
    "Algorithm": "GZip",
    "CompressionLevel": "Optimal",
    "MinFileSizeForCompressionKB": 10
  },
  
  "Security": {
    "EnableDataIntegrityCheck": true,
    "HashAlgorithm": "SHA256",
    "EncryptLocalData": false,
    "SecureDeleteLocalFiles": false
  },
  
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "ArchBuilder": "Debug"
    },
    "Console": {
      "IncludeScopes": false
    },
    "File": {
      "Path": "%LOCALAPPDATA%\\ArchBuilder.AI\\Logs\\app.log",
      "MaxSizeBytes": 10485760,
      "MaxFiles": 5
    }
  },
  
  "Monitoring": {
    "EnablePerformanceCounters": true,
    "EnableUsageTracking": true,
    "TelemetryEndpoint": "",
    "ReportingIntervalMinutes": 60
  }
}