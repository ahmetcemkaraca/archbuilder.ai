{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "ArchBuilder.RevitAddin": "Debug",
      "Microsoft": "Warning",
      "System": "Warning"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Debug"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "ArchBuilder.RevitAddin": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/archbuilder-revit-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Debug",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "ArchBuilder": {
    "ApiBaseUrl": "https://api.archbuilder.app/v1",
    "ApiKey": "",
    "TimeoutSeconds": 30,
    "MaxRetryAttempts": 3,
    "EnableLocalCache": true,
    "CacheExpirationMinutes": 60,
    "EnableTelemetry": true,
    "TelemetryEndpoint": "https://telemetry.archbuilder.app/v1/metrics"
  },
  "Revit": {
    "DefaultWallType": "Generic - 200mm",
    "DefaultDoorType": "Single-Flush",
    "DefaultWindowType": "Fixed",
    "DefaultLevelName": "Level 1",
    "DefaultWallHeight": 2700,
    "MinWallLength": 100,
    "MaxWallLength": 50000,
    "MinRoomArea": 5.0,
    "MaxRoomArea": 1000.0,
    "EnableTransactionLogging": true,
    "EnableElementValidation": true,
    "EnableGeometricValidation": true
  },
  "LocalCommunication": {
    "Protocol": "NamedPipes",
    "PipeName": "ArchBuilderRevitPipe",
    "HttpPort": 8080,
    "EnableCompression": true,
    "MaxMessageSize": 10485760,
    "ConnectionTimeoutSeconds": 30
  }
}
